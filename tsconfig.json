{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "rootDirs": [
      "types"
    ],
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "./**/*.js"
  ],
  "include": [
    "src/**/*.*",
  ]
}
