{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "src/config/locales/*"
  ],
  "verbose": true,
  "exec": "node --inspect -r dotenv/config -r ts-node/register -r tsconfig-paths/register src/index.ts",
  "watch": ["src", ".env"],
  "ext": "js,json,ts"
}
